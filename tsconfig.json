{
   "compilerOptions": {
      "module": "commonjs",
      "lib": [
         "ESNext"
      ],      
      "declaration": true, 
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es2017",
      "sourceMap": true,
      "outDir": "./build",      
      "moduleResolution": "node",
   },
   "incremental": true,
   "exclude": ["node_modules", "build"]
}